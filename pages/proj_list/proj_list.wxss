/* pages/proj_list/proj_list.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 120rpx;
  width:100%;

}

page {
  background-color: #f7f5f7;
}

.create {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.search{
  position: fixed;
  top: 0;
  height: 80rpx;
  /* width: 90%; */
  width: 100%;
  /* margin: 0 5% 0 5%; */
  background-color: white;
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
}
.search_img{
  height:40rpx;
  width:40rpx;
  margin: 20rpx 20rpx 0 20rpx;
}

.search_input{
  background-color: white;
  height: 100%;
}

.proj-card {
  border-radius: 15rpx;
  /* width: 620rpx; */
  width: 90%;
  height: 180rpx;
  background-color: white;
  border: 1rpx solid #eee;
  margin: 0 5%;
  /* padding: 20rpx 20rpx 0 20rpx; */
  margin-bottom: 30rpx;
  box-shadow: 0rpx 5rpx 20rpx 6rpx rgba(85, 85, 85, 0.05);
}
.top{
  padding: 10rpx 10rpx 0 20rpx;
}
.mid{
  padding: 10rpx 10rpx 0 20rpx;
}

.title {
  font-weight: 370;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 38rpx;
  color: #555555;
  /* margin-bottom: 12rpx; */
}

.time {
  font-size: 32rpx;
  color: #97989b;
  /* margin-bottom: 12rpx; */
}
.bottom {
  padding: 10rpx 20rpx 0 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.leader {
  font-size: 30rpx;
  color: #a3a4a6;
}

.msg {
  font-size: 30rpx;
  color: #a3a4a6;
}

.create-proj {
  position: fixed;
  /* bottom: 30rpx; */
  bottom: 0;
  left: 0;
  right: 0;
  /* width: 90%; */
  width: 100%;
  /* margin: 0 5%; */
}

button {
  margin-top: 96rpx;
  width: 100%;
  color: #fff;
  height: 80rpx;
  font-size: 30rpx;
  font-family: "微软雅黑", "黑体";
  background: #4481dd;

}

.placeholder-view {
  width: 100%;
  height: 150rpx;
}

.hidden{
  display: none;
}