.container {
  padding: 0px;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
  box-sizing: border-box;
  font-family: '微软雅黑';
}
page{
  background: #f4f4f4;
}
.classname {
  height: 100%;
  width: 100%;
  padding-bottom: 150rpx;
}
.title{
  font-size: 32rpx;
  margin: 20rpx 0;
}
.detail_view{
  /* position: relative; */
  width: 100%;
  margin: 20rpx 0 0 0;
  min-height: 120rpx;
  background-color: white;
  border-radius: 4%;
  box-shadow: 5rpx 10rpx 6rpx rgba(85, 85, 85, 0.05);
  word-break: break-all;
}

.detail_textarea{
  width: 100%;
  font-size: 32rpx;
  text-align: left;
  /* text-indent: 20rpx; */
  min-height: 120rpx;
  padding: 10rpx 20rpx;
  
}
text{
  padding: 20rpx;
  width: 80%;
}

